#include <stdio.h>
#include <math.h>
int main() {
    int n, sum;
    int sum=0;
    printf("How many numbers you want to enter (n): "); 
    scanf("&d", &n);
    if (n<=0) {
    printf("wrong input");
    return 0;
}
int i=1;
while(i<=n) {
     printf("Enter number %d: ", i);
     scanf("%d", &num);
     sum+=pow(num, 2);
     i++;
} printf("Sum of the squares: %.2ld\n, sum);
     return 0;
}

